<div class="content-wrapper">
    <div class="content">
        <div class="info-box">
            <div class="row">
                <div class="col-lg-12 m-b-3">
                    <h4 class="text-black">Product</h4>
                    <br>
                    <div class="table-responsive ">
                        <div class="container">
                            <table class="table" id="example">
                                <thead class="bg-inverse text-white">
                                    <tr>
                                        <th scope="col">#</th>
                                        <th scope="col">Username</th>
                                        <th scope="col">Delivery Address</th>
                                        <th scope="col">Date</th>
                                        <th scope="col">Price</th>
                                        <th scope="col">Order Status</th>
                                        <th scope="col">Action</th>
                                        
                                    </tr>
                                </thead>
                                <tbody>
                                    {{#each orders}}
                                    <tr>
                                        <td scope="row" id="count">{{math @index "+" 1}}</td>
                                        <td>{{deliveryAdrress.fname}}</td>
                                        <td>{{deliveryAdrress.address}}<br>
                                                        {{deliveryAdrress.city}},
                                                        {{deliveryAdrress.state}}<br>
                                                        Pincode:{{deliveryAdrress.pincode}}</td>
                                        <td>{{date}}</td>
                                        <td>{{total}}</td>
                                        <td>{{status}}</td>
                                        
                                        <td><a href="/editProd/{{this._id}}" class="text-white"
                                                style="text-decoration: none;"><button
                                                    class="btn btn-primary">Edit</button></a>
                                        <a href="/deleteProd/{{this._id}}"
                                                    class="text-white"
                                                    style="text-decoration: none;"><button class="btn btn-danger">Delete</button></td></a>
                                    </tr>
                                    {{/each}}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
 <script type="text/javascript"  src=" https://cdn.datatables.net/1.10.13/js/jquery.dataTables.min.js"></script> 
<script src="https://cdn.datatables.net/1.10.22/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.10.22/js/dataTables.bootstrap4.min.js"></script>
<script>
    $(document).ready(()=> {
        $('#example').DataTable();
    });
</script>
