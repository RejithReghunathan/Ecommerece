<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.2.0/jquery.min.js"></script>

<script src="https://cdn.datatables.net/1.10.12/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.10.12/js/dataTables.bootstrap.min.js"></script>
<div class="content-wrapper">
    <div class="content">
        <div class="info-box">
            <div class="row">
                <div class="col-lg-12 m-b-3">
                    <h4 class="text-black">Orders</h4>
                    <br>
                    <div class="table-responsive ">
                        <div class="container">
                            <table class="table" id="example">
                                <thead class="bg-inverse text-white">
                                    <tr>
                                        <th scope="col">#</th>
                                        <th scope="col">Username</th>
                                        <th scope="col">Delivery Address</th>
                                        <th scope="col">Date</th>
                                        <th scope="col">Price</th>
                                        <th scope="col">Payment</th>
                                        <th scope="col">Order Status</th>
                                     

                                    </tr>
                                </thead>
                                <tbody>
                                    {{#each orders}}
                                    <tr>
                                        <td scope="row" id="count">{{math @index "+" 1}}</td>
                                        <td>{{deliveryAdrress.fname}}</td>
                                        <td>{{deliveryAdrress.address}}<br>
                                            {{deliveryAdrress.city}},
                                            {{deliveryAdrress.state}}<br>
                                            Pincode:{{deliveryAdrress.pincode}}</td>
                                        <td>{{date}}</td>
                                        <td>{{total}}</td>
                                        <td>{{paymentMethod}}</td>
                                        <td>
                                            
                                            {{#if status}}
                                            <div class="btn btn-success">Delivered</div>
                                            {{/if}}
                                        </td>
                                    </tr>
                                    {{/each}}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>