<script src="https://code.jquery.com/jquery-3.5.1.min.js"
  integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <div class="content-header sty-one">
        <h1 class="text-black">Edit Category</h1>
        <ol class="breadcrumb">
            <li><a href="#">Home</a></li>
            <li class="sub-bread"><i class="fa fa-angle-right"></i>Category</li>
            <li><i class="fa fa-angle-right"></i>Edit Category</li>
        </ol>
    </div>
    <div class="content">
        <div class="row">
            <div class="col-lg-12">
                <div class="card card-outline">
                    <div class="card-header bg-blue">
                        <h5 class="text-white m-b-0">Edit Category</h5>
                    </div>
                    <div class="container">
                        <div class="card-body">
                            <form id="catUpForm" action="/updateCat/{{category._id}}" method="POST">
                                <div class="form-group">
                                    <label for="exampleInputEmail1">Category Name</label>
                                   
                                    <input type="text" id="name" name="name" class="form-control"
                                        value="{{category.name}}" id="exampleInputEmail1" placeholder="Category Name">
                                </div>
                                 <div id="error" class="mb-2 text-danger" style="display: none;">Category already exists!!! Try Using
                  another Category</div>
                                <button type="submit" id="button" class="btn btn-success">Update</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="http://ajax.aspnetcdn.com/ajax/jquery.validate/1.11.1/jquery.validate.min.js"></script>

<script>

  $('#catUpForm').validate({
    rules: {
      name: {
        required: true,
        minlength: 4
      }
    },
    submitHandler: function (catForm) {
      $.ajax({
        url: catForm.action,
        type: catForm.method,
        data: $(catForm).serialize(),
        success: (response) => {
          console.log(response)
          if (response.category != true) {
            $('#error').show()
          }
          else {
            window.location.href = "addCategory"
          }
        }
      });
    }
  });
</script>