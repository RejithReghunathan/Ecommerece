<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <div class="content-header sty-one">
        <h1 class="text-black">Generate Voucher</h1>
        <ol class="breadcrumb">
            <li><a href="#">Home</a></li>
            <li class="sub-bread"><i class="fa fa-angle-right"></i>Coupon</li>
            <li><i class="fa fa-angle-right"></i>Generate Coupon</li>
        </ol>
    </div>
    <div class="content">
        <div class="row">
            <div class="col-lg-12">
                <div class="card card-outline">
                    <div class="card-header bg-blue">
                        <h5 class="text-white m-b-0">Coupon</h5>
                    </div>
                    <div class="container">
                        <div class="card-body">
                            <form>
                                <div class="form-group">
                                    <label for="exampleInputEmail1">Coupon</label>

                                    <input type="text" id="coupon" name="coupon" class="form-control" value=""
                                        id="exampleInputEmail1" placeholder="Coupon Name">
                                    <button type="submit" id="button" style="float: right;"
                                        class="btn btn-success">Generate Coupon</button>
                                </div>
                                <div class="form-group">
                                    <label for="exampleInputEmail1">Offer</label>

                                    <input type="text" id="offer" name="offer" class="form-control" value=""
                                        id="exampleInputEmail1" placeholder="Offer">
                                </div>
                                <div id="error" style="display: none;">Please enter both the fields</div>
                                <button type="submit" id="submit" class="btn btn-primary">Submit</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>

<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>

<script>
    $('#button').click((e) => {
        e.preventDefault()
        $.ajax({
            method: 'get',
            url: '/generateCoupon',
            success: (response) => {
                $('#coupon').val(response)
            }
        })
    })
    $('#submit').click((e) => {
        console.log("eda its not working ")
        let coupon = $('#coupon').val()
        let offer = $('#offer').val()
        if(offer!=""&&coupon!=""){
        $.ajax({
            method: 'post',
            url: '/createCoupon',
            data: {
                coupon, offer
            },
            success: (response) => {
                if (response) {
                    window.location.href = "/voucherGenerate"
                }
            }
        })
        }
        else{
            $('#error').show()
        }
    })
</script>