<div class="content-wrapper">
    <div class="content">
        <div class="info-box">
            <div class="row">
                <div class="col-lg-12 m-b-3">
                    <h4 class="text-black">Product</h4>
                    <br>
                    <div class="table-responsive">
                        <div class="container">
                            <table class="table ">
                                <thead class="bg-inverse text-white">
                                    <tr>
                                        <th scope="col">#</th>
                                        <th scope="col">First Name</th>
                                        <th scope="col">Last Name</th>
                                        <th scope="col">Email</th>
                                        <th scope="col">Phone</th>
                                        <th scope="col">Status</th>
                                        <th scope="col">Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {{#each data}}
                                    <tr>
                                        <td scope="row" class="class=" create_index"">{{math @index "+" 1}}</td>
                                        <td>{{this.fname}}</td>
                                        <td>{{this.lname}}</td>
                                        <td>{{this.email}}</td>
                                        <td>{{this.phonenum}}</td>
                                        {{#if this.action}}
                                        <td>Active</td>
                                          <td><a href="/block/{{this._id}}" class="text-white"
                                                style="text-decoration: none;"><button
                                                    class="btn btn-danger">Block</button></a></td>
                                        {{else}}
                                        <td>Blocked</td>
                                        <td><a href="/unBlock/{{this._id}}" class="text-white"
                                                style="text-decoration: none;"><button
                                                    class="btn btn-primary">Unblock</button></a>
                                        </td>
                                        {{/if}}
                                    </tr>
                                    {{/each}}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>