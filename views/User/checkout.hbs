<script>

    function hello(addId) {
        console.log("It working Yaar")
        let address = document.getElementById(addId + 'address').innerHTML
        let state = document.getElementById(addId + 'state').innerHTML
        let city = document.getElementById(addId + 'city').innerHTML
        let pincode = document.getElementById(addId + 'pincode').innerHTML
        $('#p_address').val(address)
        $('#city_name').val(city)
        $('#province_name').val(state)
        $('#zip_code').val(pincode)
        $('#address_id').val(addId)
    }

    function coupon() {
        let coupon = $('#input-coupon').val()
        $.ajax({
            method: 'post',
            url: '/veriefyCoupon',
            data: {
                coupon
            },
            success: (response) => {
                console.log(response, "RES")
                if (response.status == 0) {
                    $('#coupon').show() //coupon applied
                    $('#invalid').hide()
                    $('#expiry').hide()
                    let total = document.getElementById('totalP').innerHTML
                    let offerPrice = total * (100 - response.offer) / 100
                    $('#offer').val(response.offer)
                    document.getElementById('totalP').innerHTML = offerPrice
                    document.getElementById('offerId').innerHTML = response.offer
                    $('#offerId').val(response.offer)
                    $('#displayOffer').show()
                    $('#nostrike').hide()
                    $('#strike').show()

                } else if (response.status === 1) {
                    $('#invalid').show()
                    $('#expiry').hide()
                    $('#coupon').hide()
                } else {
                    $('#expiry').show()
                    $('#invalid').hide()
                    $('#coupon').hide()
                }
            }
        })
    }

    $('#placeOrder').submit((e) => {
        e.preventDefault();
        $.ajax({
            url: '/place-order',
            method: "post",
            data: $('#placeOrder').serialize(),
            success: (response) => {
                if (response.codSuccess === 'COD') {
                    alert('Order Placed Successfullly')
                    window.location.href = '/orderSuccess'
                } else if (response.codSuccess == 'razorpay') {
                    console.log("amount", response)
                    razorpayPayment(response)
                } else if (response.codSuccess == 'paypal') {
                    window.location.href = '/paypalOrder'
                }
            }
        })
    })
